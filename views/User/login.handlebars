{{#if errors}}
<div>
    <h2>{{errors}}</h2>
</div>
{{/if}}
<div class="container" id="pageWrapper">
    <div>
        <form action="/User/login" method="POST">
             <div class="form-group">
                    <label for="login"> Enter Email </label>
                    <input type="email" class="form-control" id="login" name="login" placeholder="enter email">                    
                </div>
                <div class="form-group">
                    <label for="lPass"> Enter Password </label>
                    <input type="password" class="form-control" id="lPass" name="lPass" placeholder="enter email">                    
                </div>
            <input type="submit" value="Login">
        </form>
    </div>
</div>